{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}

<div class="bg-gray-100 flex w-full flex-col items-center">
	<div class="flex-col flex ml-auto mr-auto items-center w-full lg:w-2/3 md:w-3/5">

		<h1 class="font-bold text-2xl my-10 text-dark-700">
			Réinitialisater le mot de passe
		</h1>
    </div>
<div class="mt-2 flex flex-col lg:w-1/2 w-8/12">


      {{ form_start(resetForm) }}
            <div class="flex flex-wrap items-stretch w-full mb-4 relative h-15 bg-white items-center rounded mb-6 pr-10">
                <div class="flex -mr-px justify-center w-15 p-4">
                	<span class="flex items-center leading-normal bg-white rounded rounded-r-none text-xl px-3 whitespace-no-wrap text-gray-600">
						<i class="fas fa-lock"></i>
					</span>
                </div>
                {{ form_row(resetForm.plainPassword.first) }}
            </div>
            <div class="flex flex-wrap items-stretch w-full mb-4 relative h-15 bg-white items-center rounded mb-6 pr-10">
                <div class="flex -mr-px justify-center w-15 p-4">
                    <span class="flex items-center leading-normal bg-white rounded rounded-r-none text-xl px-3 whitespace-no-wrap text-gray-600">
						<i class="fas fa-lock"></i>
					</span>
                </div>
                {{ form_row(resetForm.plainPassword.second) }}
            </div>

            <button class="bg-blue-400 py-4 text-center w-full px-17 md:px-12 md:py-4 text-white rounded leading-tight text-xl md:text-base font-sans mt-4 mb-20">
                Réinitialiser
            </button>
    {{ form_end(resetForm) }}
</div>

</div>
{% endblock %}
