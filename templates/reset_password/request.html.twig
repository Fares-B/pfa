{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<div class="bg-gray-100 flex w-full">
	<div class="flex-col flex ml-auto mr-auto items-center w-full lg:w-2/3 md:w-3/5">
		<h1 class="font-bold text-2xl my-10 text-dark-700">
			Demande de réinitialisation du mot de passe
		</h1>
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        {{ form_start(requestForm) }}
            <div class="mt-2 flex flex-col">
                <div class="flex flex-wrap items-stretch w-full mb-4 relative h-15 bg-white items-center rounded mb-6 pr-10">
                    <div class="flex -mr-px justify-center w-15 p-4">
                        <span class="flex items-center leading-normal bg-white px-3 border-0 rounded rounded-r-none text-2xl text-gray-600">
                            <i class="fas fa-user-circle"></i>
                        </span>
                    </div>

                {# {{ dump(requestForm.email) }} #}
                    {{ form_row(requestForm.email) }}
                {# <input type="email" name="reset_password_request_form[email]" autocomplete="email" autofocus required class="flex-shrink flex-grow flex-auto leading-normal w-px flex-1 border-0 h-10 border-grey-light rounded rounded-l-none px-3 self-center relative  font-roboto text-xl outline-none" placeholder="Username"/> #}
                </div>
                <div>
                    <small>
                        Entrez votre adresse e-mail et nous vous enverrons un
                        lien <br>pour réinitialiser votre mot de passe.
                    </small>
                </div>

                <a href="{{ path('app_login') }}" class="text-base text-dark-700 text-right font-roboto leading-normal hover:underline mb-6">
                    Se connecter ?
                </a>

                <button class="bg-blue-400 py-4 text-center px-17 md:px-12 md:py-4 text-white rounded leading-tight text-xl md:text-base font-sans mt-4 mb-20">
                    Réinitialiser
                </button>
            </div>
        {{ form_end(requestForm) }}
	</div>
</div>

{% endblock %}
